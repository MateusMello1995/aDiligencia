<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vermelhoClaro"
    tools:context=".cadastro">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="320dp"
        android:layout_height="151dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="79dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="501dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="45dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="45dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="109dp"
        android:layout_marginTop="242dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="448dp"
        android:text="CADASTRE-SE"
        android:textColor="@color/branco"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nome"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="303dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="383dp"
        android:ems="10"
        android:hint="  Nome"
        android:theme="@style/MyEditTextTheme"
        android:inputType="textPersonName"
        android:textColorHint="@color/branco"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/email"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="367dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="319dp"
        android:ems="10"
        android:hint="  E-mail"
        android:theme="@style/MyEditTextTheme"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/branco"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/senha"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="428dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="258dp"
        android:ems="10"
        android:hint="  Senha"
        android:theme="@style/MyEditTextTheme"
        android:inputType="textPassword"
        android:textColorHint="@color/branco"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/repete_senha"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="490dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="196dp"
        android:ems="10"
        android:hint="  Repita a senha"
        android:theme="@style/MyEditTextTheme"
        android:inputType="textPassword"
        android:textColorHint="@color/branco"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_cadastrar"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="571dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/buttonshape2"
        android:shadowColor="#661C0D"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="0"
        android:text="CADASTRAR"
        android:textColor="@color/branco"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>